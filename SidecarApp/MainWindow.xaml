<Window x:Class="SidecarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="MemoQ AI Sidecar"
        Height="600"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded">

    <Border BorderBrush="#007acc" BorderThickness="2" CornerRadius="8" Background="#1e1e1e">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#252526" CornerRadius="6,6,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="32">
                    <TextBlock Text="MemoQ AI Sidecar Editor"
                               Foreground="#cccccc"
                               VerticalAlignment="Center"
                               Margin="12,0"
                               FontSize="12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,0">
                        <Button Content="_" Width="32" Height="32" Click="Minimize_Click"
                                Background="Transparent" Foreground="#cccccc" BorderThickness="0" FontSize="16"/>
                        <Button Content="X" Width="32" Height="32" Click="Close_Click"
                                Background="Transparent" Foreground="#cccccc" BorderThickness="0" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- WebView2 Container -->
            <wv2:WebView2 x:Name="MainWebView"
                          Grid.Row="1"
                          Source="about:blank"
                          DefaultBackgroundColor="Transparent"/>
        </Grid>
    </Border>
</Window>
